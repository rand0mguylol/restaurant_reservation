<section class = "reservation py-5" id = "reservation-section">
  <div class = "container">
    <h2 class = "text-light text-center mb-5">RESERVATION</h2>
    <form action="/reservation" id = "reservation-form" class = "mx-auto" method="POST">
      <div class="row mb-5">
        <div class="col-12 col-md-6 form-col first-col">
          <input type="text" class="form-control" placeholder="First Name" aria-label="First Name" name ="firstName" required>
        </div>
        <div class="col-12 col-md-6 form-col">
          <input type="text" class="form-control" placeholder="Last Name" aria-label="Last Name" name ="lastName" required>
        </div>
      </div>
      <div class="row mb-5">
        <div class="col-12 col-md-6 form-col first-col">
          <input type="tel" class="form-control" placeholder="Contact Number (xxx-xxxxxxx)" aria-label="Contact Number" name ="contactNumber" pattern="[0-9]{3}-[0-9]{7,8}" required>
        </div>
        <div class="col-12 col-md-6 form-col">
          <input type="email" class="form-control" placeholder="Email" aria-label="Email" name ="email" required>
        </div>
      </div>
      <div class="row mb-5">
        <div class="col-12 col-md-6 form-col first-col">
          <input type="date" class="form-control" name ="bookingDate" min = "<%= today %>" id = "date-field" required>
        </div>
        <div class="col-12 col-md-6 form-col" id = "time-slot-col">
          <% if(!timeList.length) { %>
          <input type="text" value = "Fully Booked" class = "form-control disabled" disabled>
          <% } else { %>
          <select class="form-control form-select" aria-label="Default select example" id = "time-select" name ="bookingTime" required>
            <option selected>Select Time</option>
            <% for(let t of timeList) { %>
            <option value="<%= t %>"><%= t %></option>
            <% } %>
          </select>
          <% } %>
        </div>
      </div>
      <div class = "mb-5">
        <input type="number" id="pax" min="1" max="100" placeholder="Number of Person" class = "form-control" name ="pax" required>
      </div>
      <textarea name="specialInstruction" rows="5" id = "special-instruction" class = "form-control mb-5" placeholder="Special Instruction"></textarea>
      <div class = "text-center">
        
        <button type = "submit" id = "reserve-now-button" class = "rounded-pill py-3 text-dark bg-light mx-auto btn btn-primary reserve-button" <% if(!timeList.length) { %> disabled <% } %>>RESERVE NOW</button>
        
      </div>
    </form>
  </div>
</section>

